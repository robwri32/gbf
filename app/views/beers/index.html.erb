<p id="notice"><%= notice %></p>

<h1>Listing Beers</h1>



<table data-toggle="table" data-show-columns="true" data-search="true" data-show-refresh="true" data-show-toggle="true" data-show-export="true" data-pagination="true" data-height="299" class="table table-striped table-hover table-responsive">
  <div id="filter-bar"> </div>
  <thead>
    <tr>
      <th>Distributor</th>
      <th>Brewery</th>
      <th>Product</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td data-field="distributor"><%= beer.distributor %></td>
        <td data-field="brewery"><%= beer.brewery %></td>
        <td data-field="product"><%= beer.product %></td>
        <td data-field="location"><%= beer.location %></td>
        <td><%= link_to 'Show', beer %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer', new_beer_path %>


<table data-toggle="table" data-url="data2.json" data-show-columns="true" data-search="true" data-show-refresh="true" data-show-toggle="true" data-show-export="true" data-pagination="true" data-height="299">
    <thead>
    <tr>
        <th data-field="id">ID</th>
        <th data-field="name">Item Name</th>
        <th data-field="price">Item Price</th>
    </tr>
    </thead>
</table>
